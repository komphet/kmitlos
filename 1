#include "stdio.h"
#include <stdlib.h>
#include <unistd.h>
#include <sys/types.h>

#define clear_buffer() while(getchar() != '\n')
int main() {
  pid_t pid;
  int num, sum = 0;
  int i;
  printf("Enter a positive number ");
  scanf("%d", &num);
  if(num <= 0){
	printf("You did not enter a positive number\n");
	exit(1);
  }
  pid = fork();
    if (pid > 0) { /* parent */
    for (i = 1; i <= num; i++){
      sum += i;
    }
    wait(NULL);
    printf("I am parent my sum = %d\n", sum);
    } else { /* child */
    for(i = 1; i <= 2 * num; i++){
      sum += i;
    }
    printf("I am chlid my sum = %d\n", sum);
    }

   printf("Press any key to exit...");
   getchar();
   exit(191);
}
